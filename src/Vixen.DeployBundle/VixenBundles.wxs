<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
					xmlns:bal="http://wixtoolset.org/schemas/v4/wxs/bal">

		<?define Logo = "..\..\Installer\vixen.ico" ?>
		<?define LogoSide = "..\..\Installer\vixen.bmp" ?>
		<?define LicenseUrl = "www.vixenlights.com/download/license?>
		
		<?if $(ReleaseType) = "Dev"?>
				<?define UpgradeCode = "59c1ae78-3c30-4db5-a080-e871d21fa7e9"?>
				<?define Name = "Vixen Development"?>
		<?elseif $(ReleaseType) ="Prod"?>
				<?define UpgradeCode = "9f299a6c-6c3f-4602-9b6f-845ab778dd67"?>
				<?define Name = "Vixen"?>
		<?else?>
				<?define UpgradeCode = "38db4df3-d2ee-4f0b-a8ff-9e86bd84e187"?>
				<?define Name = "Vixen Test"?>
		<?endif?>
		
				<Bundle Name="$(var.Name)" Manufacturer="Vixen Lights" Version="$(Version)" UpgradeCode="$(var.UpgradeCode)" IconSourceFile="$(var.Logo)">
						<BootstrapperApplication>
								<bal:WixStandardBootstrapperApplication 
										LicenseUrl="https://www.vixenlights.com/license" 
										Theme="hyperlinkSidebarLicense" 
										ShowVersion="true"
										LogoFile="$(var.Logo)"
										LogoSideFile="$(LogoSide)"/>
						</BootstrapperApplication>

						<Chain>
								<PackageGroupRef Id="VCRedistPackage"/>
								<PackageGroupRef Id="Net6Package"/>
								<PackageGroupRef Id="ASPNetCore6Package"/>
								<PackageGroupRef Id="VixenPackage"/>
						</Chain>
				</Bundle>
</Wix>
